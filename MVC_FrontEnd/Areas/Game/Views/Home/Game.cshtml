@model MVC_FrontEnd.Areas.Game.Models.GameModel


<link rel="stylesheet" href="css/main.min.css">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/color.css">
<link rel="stylesheet" href="css/responsive.css">



<!-- Zone 1 START -->
<div class="col-lg-9">
    <div class="group-feed">
        <div class="group-avatar">
            <img src="~/data/games/@Model.Id/biglogo.jpg" alt="">
            <a href="#" title=""><i class="icofont-check-circled"></i>Subscribed</a>
            <figure class="group-dp"><img src="images/resources/group-dp.jpg" alt=""></figure>
        </div>
        <div class="grp-info">
            <h4>@Model.Name <span>Sendbox, survival, action, RPG</span></h4>

            <ul>
                <li><span>Realese date:</span> April 2020</li>
                <li><span>Servers:</span> 54</li>
                <li><span>Groups:</span> 9</li>
                <li><span>Followers:</span> 2.2K</li>
            </ul>
            <ul class="more-grp-info">

                <li>
                    <div class="more">
                        <div class="more-post-optns">
                            <i class="">
                                <svg class="feather feather-more-horizontal" stroke-linejoin="round" stroke-linecap="round" stroke-width="2" stroke="currentColor" fill="none" viewBox="0 0 24 24" height="24" width="24" xmlns="http://www.w3.org/2000/svg"><circle r="1" cy="12" cx="12"></circle><circle r="1" cy="12" cx="19"></circle><circle r="1" cy="12" cx="5"></circle></svg>
                            </i>
                            <ul>
                                <li>
                                    <i class="icofont-pen-alt-1"></i>Edit Post
                                    <span>Edit This Post within a Hour</span>
                                </li>
                                <li>
                                    <i class="icofont-ban"></i>Hide Post
                                    <span>Hide This Post</span>
                                </li>
                                <li>
                                    <i class="icofont-ui-delete"></i>Delete Post
                                    <span>If inappropriate Post By Mistake</span>
                                </li>
                                <li>
                                    <i class="icofont-flag"></i>Report
                                    <span>Inappropriate content</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="main-wraper">
            <div class="grp-about">
                <div class="row">



                    <div>
                        <h4>About hte game</h4>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>







                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-8">

                <ul class="nav nav-tabs post-detail-btn-renew">
                    <li class="nav-item"><button class="active" href="#link11" data-toggle="tab">News</button></li>
                    <li class="nav-item"><button class="" href="#link12" data-toggle="tab">Servers</button></li>
                    <li class="nav-item"><button class="" href="#link13" data-toggle="tab">Groups</button></li>
                </ul><br />

                <div class="tab-content">  

                   @await Component.InvokeAsync("GameNews")

                   @await Component.InvokeAsync("GameServers", new { gameId = @Model.Id })
                    
                   @await Component.InvokeAsync("GameGroups", new { gameId = @Model.Id })

                </div>
            </div>



            <div class="col-lg-4">
                <aside class="sidebar static left">
                    <div class="advertisment-box">
                        <h4 class=""><i class="icofont-info-circle"></i> advertisment</h4>
                        <figure>
                            <a href="#" title="Advertisment"><img src="~/images/resources/ad-widget2.jpg" alt=""></a>
                        </figure>
                    </div>
                    <div class="widget stick-widget is_stuck">
                        <h4 class="widget-title">Members <a title="" href="#" class="see-all">See All</a></h4>
                        <ul class="invitepage">
                            <li>
                                <figure>
                                    <img alt="" src="images/resources/friend-avatar.jpg">
                                    <a href="">Jack carter</a>
                                </figure>
                                <button class="sug-like"><i class="invit">Follow</i><i class="icofont-check-alt"></i></button>
                            </li>
                            <li>
                                <figure>
                                    <img alt="" src="images/resources/friend-avatar2.jpg">
                                    <a href="">Emma watson</a>
                                </figure>
                                <button class="sug-like"><i class="invit">Follow</i><i class="icofont-check-alt"></i></button>
                            </li>
                            <li>
                                <figure>
                                    <img alt="" src="images/resources/friend-avatar3.jpg">
                                    <a href="">Andrew</a>
                                </figure>
                                <button class="sug-like"><i class="invit">Follow</i><i class="icofont-check-alt"></i></button>
                            </li>
                            <li>
                                <figure>
                                    <img alt="" src="images/resources/friend-avatar4.jpg">
                                    <a href="">Moona Singh</a>
                                </figure>
                                <button class="sug-like"><i class="invit">Follow</i><i class="icofont-check-alt"></i></button>
                            </li>
                            <li>
                                <figure>
                                    <img alt="" src="images/resources/friend-avatar5.jpg">
                                    <a href="">Harry pooter</a>
                                </figure>
                                <button class="sug-like"><i class="invit">Follow</i><i class="icofont-check-alt"></i></button>
                            </li>
                        </ul>
                    </div>


                </aside>
            </div>

        </div>
    </div>
</div>
<!-- Zone 1 END -->



<script src="js/main.min.js"></script>
<script src="js/sparkline.js"></script>
<script src="js/chart.js"></script>
<script src="js/script.js"></script>
