@model IEnumerable<MVC_FrontEnd.Areas.Game.Models.GameSimpleModel>
@{

}

<div class="col-lg-9">

    <div class="main-wraper">
        <div class="main-title">Game list</div>
        <div class="row">
            

            @if (Model.Count() > 0 && Model.ToList()[0].Id == 0)
            {
                <div class="center">The service is temporarily unavailable</div>
            }
            else if (Model.Count() == 0)
            {
                <center><h4>Game list is empty</h4></center>
            }
            else
            {
                @foreach (var item in Model)
                {


                    <div key={games.id} class="col-lg-4 col-md-4 col-sm-6">
                        <div class="event-post mb-3">

                            <figure>
                                <a asp-area="Game" asp-controller="Home" asp-action="Game" asp-route-id="@item.Id">
                                    <img src="~/data/games/@item.Id/smalllogo.jpg" alt="" />
                                </a>
                            </figure>

                            <div class="event-meta">
                                <h6><a href="event-detail.html" title="">@item.Name</a></h6>
                                <p> servers: 132 | Groups: 21</p>
                                <a asp-area="Game" asp-controller="Home" asp-action="Game" asp-route-id="@item.Id">Read more</a>

                            </div>
                        </div>
                    </div>
                }
            }










        </div>
    </div>
</div>



